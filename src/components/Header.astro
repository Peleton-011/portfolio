---
import ThemeToggle from "./ThemeToggle.astro";
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<div>
	<!-- SCROLL WRAPPER -->
	<div class="sticky top-0 h-1 group"></div>

	<header
		class=`
        hidden md:block
        flex justify-center items-center
        fixed top-5 left-3/4 md:left-1/2 -translate-x-1/2 
        z-50
        w-full md:w-auto px-6 py-2 
        transition-all duration-300
        bg-white/0 shadow-none rounded-full 
        backdrop-blur-sm
        group-[.sticky]:bg-[#1c1b22]/80 group-[.sticky]:shadow-lg`
	>
		<nav >
			<ul
				class="flex flex-row items-center gap-x-5 lg:gap-x-10 opacity-80"
			>
				<li>
					<a href="#top">{t("nav.home")}</a>
				</li>
				<li>
					<a href="#experience">{t("nav.experience")}</a>
				</li>
				<li>
					<a href="#projects">{t("nav.projects")}</a>
				</li>
				<li class="text-nowrap">
					<a href="#about">{t("nav.about")}</a>
				</li>
				<li>
					<a href="mailto:nicodiazan@gmail.com">{t("nav.contact")}</a>
				</li>
				<!-- <li><ThemeToggle /></li> Remove until properly implemented -->
			</ul>
		</nav>
	</header>
</div>
