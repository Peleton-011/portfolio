---
import MeImage from "./MeImage.astro";
import SocialPill from "./SocialPill.astro";
import Badge from "./Badge.astro";
import LinkedInIcon from "./icons/LinkedInIcon.astro";
import GitHubIcon from "./icons/GitHubIcon.astro";
import MailIcon from "./icons/MailIcon.astro";

import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);
---

<>
<div>
	<h1 class="pb-6 lg:pb-16">
		<div
			class="text-black dark:text-white text-3xl md:text-4xl lg:text-5xl font-bold flex flex-row items-center gap-x-4"
		>
			<MeImage class="size-16 block md:hidden" />
			{t("hero.title")} <a
				href="https://www.linkedin.com/in/nico-diaz-andreu-19b339279/"
				target="_blank"
				rel="noopener"
				class="flex items-center justify-center"
				><Badge>{t("hero.available")}</Badge></a
			>
		</div>
	</h1>
	<h2 class="text-xl lg:text-2xl opacity-80 text-wrap max-w-[700px]">
		<span class="text-purple-800/90 dark:text-purple-200/90">
			{t("hero.experience")}</span
		>
		<span class="text-red-900/90 dark:text-red-100/90">
			{t("hero.location")}</span
		>
		<span class="opacity-85">
			{t("hero.description")}
		</span>
	</h2>

	<nav>
		<ul class="flex gap-4 mt-8 flex-wrap">
			<li>
				<SocialPill
					href="https://www.linkedin.com/in/nico-diaz-andreu-19b339279/"
				>
					<LinkedInIcon class="size-5 md:size-6" />
					LinkedIn
				</SocialPill>
			</li>
			<li>
				<SocialPill href="https://github.com/Peleton-011">
					<GitHubIcon class="size-5 md:size-6" />
					GitHub
				</SocialPill>
			</li>
			<li>
				<SocialPill href="mailto:nicodiazan@gmail.com">
					<MailIcon class="size-5 md:size-6" />
					nicodiazan@gmail.com
				</SocialPill>
			</li>
		</ul>
	</nav>
</div>
<MeImage class="size-60 hidden md:block" />
