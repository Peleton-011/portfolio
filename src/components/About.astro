---
import { getLangFromUrl, useTranslations } from "../i18n/utils";

const lang = getLangFromUrl(Astro.url);
const t = useTranslations(lang);

interface subsection {
	type: string;
	text: string;
}
---

<article
	class="flex flex-col items-center justify-center gap-8 text-gray-700 dark:text-gray-300 md:flex-row"
>
	<div
		class="[&>p]:mb-4 [&>p>strong]:text-purple-800 drop-shadow-sm  dark:[&>p>strong]:text-yellow-100 [&>p>strong]:font-bold [&>p>strong]:font-mono text-pretty order-2 md:order-1"
	>
		{
			(t("about") as unknown as subsection[][]).map((section) => (
				<p>
					{section.map((subsection) => {
						switch (subsection.type) {
							case "strong":
								return <strong>{subsection.text}</strong>;
							case "highlight":
								return (
									<strong>
										<em class="italic">
											{subsection.text}
										</em>
									</strong>
								);
                            default:
                                return subsection.text
						}
					})}
				</p>
			))
		}

	</div>
	<img
		width="200"
		height="200"
		src="/me.jpeg"
		alt="Nico Diaz"
		class="order-1 object-cover w-64 h-full p-1 md:order-2 rotate-3 lg:p-2 lg:w-64 aspect-square rounded-2xl bg-black/20 dark:bg-yellow-500/5 ring-1 ring-black/70 dark:ring-white/20"
		style="object-position: 50% 50%"
	/>
</article>
